---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'

// Content
// - SEO
const SEO = {
	title: 'youMIS? | About Us',
	description:
		'YouMIS is an AI-powered guidance platform for prospective and current Management Information Systems students, developed by students at Ankara Yıldırım Beyazıt University.'
}

// - Page Header
const header = {
	title: 'About <strong>youMIS?</strong>',
	text: 'Your AI-powered guide for navigating Management Information Systems education and career paths.'
}

// Team Members Data
const teamMembers = [
	{
		name: 'Mirace Deveci',
		photo: '/team/mirace.png',
		email: 'miracedeveci72@gmail.com',
		linkedin: 'https://www.linkedin.com/in/mirace-deveci-5b1b2b273',
	},
	{
		name: 'Betül Toraman',
		photo: '/team/betul.png',
		email: 'betultoraman.hf@gmail.com',
		linkedin: 'https://www.linkedin.com/in/betül-toraman-58318027b/',
	},
	{
		name: 'Nur Başoğlu',
		photo: '/team/nur.png',
		email: 'Nurbasoglu1@gmail.com',
		linkedin: 'https://www.linkedin.com/in/nur-başoğlu-b8008b245',
	}
]
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />

	<div class="bg-neutral-50 dark:bg-neutral-950/80">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto mb-16">
				<h2 class="text-3xl font-bold text-neutral-900 dark:text-white mt-8 mb-6">What is youMIS?</h2>
				<p class="text-lg text-neutral-600 dark:text-neutral-300 mb-6">
					YouMIS is an AI-powered guidance platform designed for prospective and current Management Information Systems (MIS) students. Our project was developed by MIS students at Ankara Yıldırım Beyazıt University's Faculty of Business.
				</p>
				<p class="text-lg text-neutral-600 dark:text-neutral-300 mb-6">
					As the YouMIS team, our mission is to help individuals shape their careers confidently and effectively through technology. With a vision that embraces future technologies today, we aim to inspire and guide our users.
				</p>
				<p class="text-lg text-neutral-600 dark:text-neutral-300">
					Our project is supported by TÜBİTAK's 2209-A University Students Research Projects Support Program, enabling us to reach a wider audience and progress towards becoming a sustainable and accessible platform.
				</p>
			</div>

			<br />
			<h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-12 text-center">Meet Our Team</h2>
			<div class="flex flex-row justify-center gap-8 max-w-5xl mx-auto overflow-x-auto mb-8">
				{teamMembers.map(member => (
					<div class="bg-white dark:bg-neutral-900 rounded-lg shadow-lg p-6 flex-shrink-0 w-[300px]">
						<div class="flex justify-center mb-6">
							<div class="w-24 h-24 flex-shrink-0 overflow-hidden rounded-full">
								<img
									src={member.photo}
									alt={member.name}
									class="w-24 h-24 object-cover"
								/>
							</div>
						</div>
						<h3 class="text-xl font-semibold text-neutral-900 dark:text-white text-center mb-4">
							{member.name}
						</h3>
						<div class="flex justify-center gap-4">
							<a
								href={`mailto:${member.email}`}
								class="text-neutral-600 hover:text-primary-500 dark:text-neutral-400 dark:hover:text-primary-400"
								title="Email"
							>
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</a>
							<a
								href={member.linkedin}
								target="_blank"
								rel="noopener noreferrer"
								class="text-neutral-600 hover:text-primary-500 dark:text-neutral-400 dark:hover:text-primary-400"
								title="LinkedIn"
							>
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
								</svg>
							</a>
						</div>
					</div>
				))}
			</div>
		</div>
	</div>
</Layout>
