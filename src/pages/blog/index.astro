---
// Blog Index Page
// ------------
// Description: The blog index page.

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../components/blocks/blog/BlogPosts.astro'

// Data
import { getCollection } from 'astro:content'

// Content
// - SEO
const SEO = {
	title: 'youMIS | Resources & Insights for Management Information Systems Students',
	description:
		"Discover career guidance, learning resources, and industry insights specially curated for Management Information Systems students. Stay updated with the latest trends, opportunities, and development paths in the MIS field."
}
// - Page Header
const header = {
	title: 'The <strong>youMIS</strong> Blog.<br>Resources & Career Insights',
	text: 'Empowering MIS students with knowledge, guidance, and tools for professional development and career success.'
}

const allPosts = await getCollection('blog')
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<BlogPosts data={allPosts} />
</Layout>
