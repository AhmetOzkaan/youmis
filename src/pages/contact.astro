---
// Components
import Layout from '../layouts/Layout.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'

// Content
// - SEO
const SEO = {
	title: 'youMIS | Contact Us',
	description:
		'Get in touch with the YouMIS team. We are here to answer your questions and value your feedback.'
}
// - Page Header
const header = {
	title: 'Contact <strong>Us!</strong>',
	text: 'As the "YouMIS?" team, communicating with you is very important to us. We are here to answer your questions, evaluate your feedback, and provide the best service.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	
	<div class="bg-neutral-50 dark:bg-neutral-950/80 pb-16">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center space-y-8">
				<div class="space-y-4">
					<h2 class="text-2xl font-semibold text-neutral-900 dark:text-white">Contact</h2>
					<p class="text-lg text-neutral-600 dark:text-neutral-400">
						<a href="mailto:youmis.ybu@gmail.com" class="text-primary-600 hover:text-primary-700">youmis.ybu@gmail.com</a>
					</p>
				</div>

				<div class="space-y-4">
					<h2 class="text-2xl font-semibold text-neutral-900 dark:text-white">Social Media</h2>
					<div class="space-y-2">
						<p class="text-lg text-neutral-600 dark:text-neutral-400">
							Instagram: <a href="https://instagram.com/youmis" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700">@youmis</a>
						</p>
						<p class="text-lg text-neutral-600 dark:text-neutral-400">
							Twitter: <a href="https://twitter.com/youmis" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700">@youmis</a>
						</p>
					</div>
				</div>

				<div class="mt-12">
					<p class="text-lg text-neutral-600 dark:text-neutral-400">
						Your ideas are valuable to us. Your feedback will help us improve our platform. Get in touch with us, and let's shape the career paths of the future together!
					</p>
				</div>
			</div>
		</div>
	</div>
</Layout>
