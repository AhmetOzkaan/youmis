import Button from '../../ui/Button.astro'

---

<Section id="intro" padding="top" classes="bg-neutral-50 dark:bg-neutral-900 min-h-screen flex items-center">
	<Row>
		<Col span="2" />
		<Col span="8" align="center">
			<h1 class="text-7xl">Don't <strong>MISs</strong> Your Future!</h1>

			<p class="pb-0 text-lg">
				Your AI-powered career guide designed for Management Information Systems students!
				<br>
				Discover your own strengths, start your journey right now with youMIS! 
			</p>
			<Button size="lg" link="/career-test">Take the Career Test</Button>
		</Col>
		<Col span="2" />
		<Col span="2" />
		<Col span="8">
		</Col>
		<Col span="2" />
	</Row>
</Section>
