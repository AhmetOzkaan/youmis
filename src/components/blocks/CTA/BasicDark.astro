---
// Basic Dark Call To Action section
// ------------
// Description: A centered call to action section that contains: a title, text, background image, notification and a button.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Highlight from '../../ui/Highlight.astro'

// Content
import ctaImage from '../../../assets/cta-dark-bg.webp'
import badge from '../../../assets/badge.svg'
---
<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Discover Your Ideal MIS Career Path!"
				text="Take our comprehensive assessment to identify which MIS specialization aligns with your skills and interests. Complete the test in just a few minutes and get personalized career recommendations tailored just for you."
				mode="dark"
				bg={ctaImage}
			>
				<ChipNotification radius="rounded-full" classes="mb-6 box">
					<Image src={badge} alt="Quick Assessment" class="h-12 w-12" slot="button" />
					<span class="hidden md:block">Only takes 5 minutes.</span>
				</ChipNotification>
				<Button size="2xl" style="primary"> Take the Career Test </Button>
			</CTA>
		</Col>
		<Col span="1" />
	</Row>
</Section>
