---
// Imports
const { frontmatter } = Astro.props

import Breadcrumbs from '../components/ui/Breadcrumbs.astro'
//Layout Components
import Layout from './Layout.astro'

// Content
// - SEO
const SEO = {
	title: `${frontmatter.title} | youMIS Courses`,
	description: `${frontmatter.description}`
}


---

<Layout title={SEO.title} description={SEO.description}>
    <div class="bg-gradient-to-b from-neutral-50 to-white dark:from-neutral-900 dark:to-neutral-800">
        <div class="container mx-auto px-4 sm:px-6 py-8 sm:py-12">
            <div class="max-w-4xl mx-auto">
                <div class="mb-8">
                    <Breadcrumbs classes="mb-4" />
                    <div class="space-y-6">
                        <div class="flex flex-col gap-2">
                            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight text-neutral-900 dark:text-white">
                                {frontmatter.title}
                            </h1>
                        </div>
                        <p class="text-lg sm:text-xl text-neutral-600 dark:text-neutral-300 leading-relaxed">
                            {frontmatter.description}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="course-content basic-text basic-text--lg">
        <slot />
    </div>
</Layout>

<style>
    .course-content {
        @apply mx-auto max-w-4xl px-4 sm:px-6 py-8 sm:py-12;
    }
    .course-content :global(h2) {
        @apply text-2xl sm:text-3xl font-bold mb-6 mt-12 text-gray-900 dark:text-white;
    }
    .course-content :global(h3) {
        @apply text-xl sm:text-2xl font-semibold mb-4 mt-8 text-gray-800 dark:text-gray-100;
    }
    .course-content :global(p) {
        @apply mb-6 text-gray-600 dark:text-gray-300 leading-relaxed;
    }
    .course-content :global(a) {
        @apply text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors duration-200;
    }
    .course-content :global(ul) {
        @apply space-y-3 mb-6 ml-4;
    }
    .course-content :global(li) {
        @apply text-gray-600 dark:text-gray-300;
    }
    .course-content :global(img) {
        @apply rounded-lg my-8 w-full max-w-3xl mx-auto shadow-lg;
    }
    .course-content :global(blockquote) {
        @apply border-l-4 border-primary-500 pl-4 italic my-6 text-gray-700 dark:text-gray-300;
    }
</style>